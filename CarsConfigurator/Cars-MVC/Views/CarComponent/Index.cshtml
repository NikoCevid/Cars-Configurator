@model IEnumerable<Dao.Models.CarComponent>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Popis komponenti";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var filter = (Cars_MVC.Models.CarComponentFilterViewModel)ViewBag.Filter;
    var totalPages = (int)ViewBag.TotalPages;
}

<h2>Popis komponenti</h2>

<form method="get" class="mb-3">
    <input type="text" name="SearchTerm" value="@filter.SearchTerm" placeholder="Pretraži po imenu" class="form-control d-inline-block" style="width:200px" />
    <select name="ComponentTypeId" class="form-control d-inline-block" style="width:200px">
        <option value="">-- Vrsta --</option>
        @foreach (var type in (List<SelectListItem>)ViewBag.ComponentTypes)
        {
            <option value="@type.Value" selected="@(type.Value == filter.ComponentTypeId?.ToString() ? "selected" : null)">@type.Text</option>
        }
    </select>
    <button type="submit" class="btn btn-primary">Pretraži</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Naziv</th>
            <th>Opis</th>
            <th>Vrsta</th>
            <th>Slika</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.ComponentType?.Name</td>
            <td><img src="@item.ImagePath" alt="Nema slike" width="100" /></td>
            <td>
                @Html.ActionLink("Uredi", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
                @Html.ActionLink("Obriši", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == filter.Page ? "active" : "")">
                    <a class="page-link"
                       href="?SearchTerm=@filter.SearchTerm@(filter.ComponentTypeId.HasValue ? $"&ComponentTypeId={filter.ComponentTypeId}" : "")&Page=@i">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}
