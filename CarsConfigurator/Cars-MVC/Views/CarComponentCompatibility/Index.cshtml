@model IEnumerable<Dao.Models.CarComponentCompatibility>

@{
    ViewData["Title"] = "Kompatibilnosti komponenti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kompatibilnosti komponenti</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj novu kompatibilnost</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Komponenta A</th>
            <th>Komponenta B</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CarComponentId1Navigation?.Name</td>
                <td>@item.CarComponentId2Navigation?.Name</td>
                <td>
                    <a asp-action="Delete"
                       asp-route-id1="@item.CarComponentId1"
                       asp-route-id2="@item.CarComponentId2"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Jeste li sigurni da želite obrisati ovu kompatibilnost?');">
                        Obriši
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
