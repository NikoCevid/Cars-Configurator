@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .details-container {
        display: flex;
        padding: 40px;
        gap: 30px;
    }

    .left-images {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

        .left-images img {
            width: 60px;
            height: 60px;
            background-color: #ccc;
        }

    .main-image {
        flex: 1;
        background-color: #eee;
        width: 300px;
        height: 300px;
        object-fit: cover;
    }

    .details-content {
        flex: 2;
    }

        .details-content h2 {
            margin-bottom: 10px;
        }

        .details-content .info-box {
            border: 1px solid #ccc;
            padding: 15px;
            margin-bottom: 20px;
        }

    .tabs {
        display: flex;
        gap: 20px;
        margin-bottom: 10px;
        font-weight: bold;
        cursor: pointer;
    }

    .tab-content {
        background-color: #f9f9f9;
        padding: 10px;
        border: 1px solid #ccc;
    }

    footer {
        text-align: center;
        padding: 20px;
        background-color: #f2f2f2;
        border-top: 1px solid #ccc;
    }
</style>

<div class="details-container">
    <div class="left-images">
        <img src="#" alt="Slika 1" />
        <img src="#" alt="Slika 2" />
        <img src="#" alt="Slika 3" />
    </div>

    <img src="#" alt="Main Image" class="main-image" />

    <div class="details-content">
        <p><strong>Item Category</strong></p>
        <h2>Item 1 Title</h2>

        <div class="info-box">
            <p><strong>Price:</strong> €8.99</p>
            <p><strong>In Stock:</strong> Yes</p>
            <p><strong>Condition:</strong> New</p>
            <p><strong>Dimensions:</strong> 10 x 20 x 5 cm</p>
            <p><strong>Weight:</strong> 1.2 kg</p>
        </div>

        <div class="tabs">
            <span>Description</span>
            <span>Specifications</span>
            <span>Tags</span>
            <span>Availability</span>
        </div>

        <div class="tab-content">
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at turpis nec lorem euismod varius.
                Suspendisse potenti. Etiam vitae ex nec sapien convallis.
            </p>
        </div>
    </div>
</div>

<footer>
    <p>Footer text etc...</p>
</footer>
