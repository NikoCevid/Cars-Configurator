@model List<Cars_MVC.Models.UserConfigurationDTO>

@{
    ViewData["Title"] = "Konfiguracije korisnika";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Konfiguracije korisnika</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Korisnik</th>
            <th>Komponente</th>
            <th>Datum konfiguracije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>
                    @if (user.ComponentNames.Any())
                    {
                        <ul>
                            @foreach (var comp in user.ComponentNames)
                            {
                                <li>@comp</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <i>Nema spremljenih komponenti</i>
                    }
                </td>
                <td>
                    @user.LastConfigurationDate?.ToString("dd.MM.yyyy. HH:mm") ?? "—"
                </td>
            </tr>
        }
    </tbody>
</table>
