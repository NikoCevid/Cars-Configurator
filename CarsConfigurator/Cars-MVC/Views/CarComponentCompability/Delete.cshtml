@model Dao.Models.CarComponentCompatibility

@{
    ViewData["Title"] = "Brisanje kompatibilnosti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Obriši kompatibilnost</h2>

<div class="alert alert-warning">
    <p>Jeste li sigurni da želite obrisati kompatibilnost između:</p>
    <strong>@Model.CarComponentId1Navigation?.Name</strong> i <strong>@Model.CarComponentId2Navigation?.Name</strong>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
</form>
