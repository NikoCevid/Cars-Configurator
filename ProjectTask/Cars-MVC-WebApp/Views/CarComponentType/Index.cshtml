@model IEnumerable<Dao.Models.ComponentType>

@{
    ViewData["Title"] = "Popis tipova komponenti";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tipovi komponenti</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj novi tip</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>
